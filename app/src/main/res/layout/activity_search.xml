<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="1575px"
        android:layout_height="match_parent"
        android:background="@android:color/background_light" >
        <EditText
            android:layout_width="1400px"
            android:layout_height="100px"
            android:layout_marginTop="80px"
            android:layout_marginLeft="87.5px"
            android:paddingLeft="270px"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="40sp"
            android:imeOptions="actionSearch"
            android:id="@+id/search_editText"
            android:background="@drawable/img_search" />
        <Button
            android:layout_width="1400px"
            android:layout_height="100px"
            android:layout_marginTop="80px"
            android:layout_marginLeft="87.5px"
            android:paddingLeft="100px"
            android:id="@+id/search_button"
            android:background="@color/empty" />

        <Button
            android:layout_width="120px"
            android:layout_height="100px"
            android:layout_marginTop="80px"
            android:layout_marginLeft="1360.5px"
            android:id="@+id/search_submit_button"
            android:background="@color/empty" />

        <TextView
            android:layout_width="1000px"
            android:layout_height="300px"
            android:layout_marginLeft="287.5px"
            android:layout_marginTop="500px"
            android:text="검색 결과가 없습니다."
            android:textSize="110px"
            android:visibility="gone"
            android:id="@+id/no_search_view"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="220px"
                android:layout_marginLeft="200px"
                android:layout_marginBottom="100px"
                android:id="@+id/search_view_1">
            </LinearLayout>
            <LinearLayout
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="220px"
                android:layout_marginLeft="110px"
                android:layout_marginBottom="100px"
                android:id="@+id/search_view_2">
            </LinearLayout>
            <LinearLayout
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="220px"
                android:layout_marginLeft="110px"
                android:layout_marginBottom="100px"
                android:id="@+id/search_view_3">
            </LinearLayout>
            <LinearLayout
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="220px"
                android:layout_marginLeft="110px"
                android:layout_marginBottom="100px"
                android:id="@+id/search_view_4">
            </LinearLayout>
        </LinearLayout>


    </FrameLayout>

    <FrameLayout
        android:layout_width="345px"
        android:layout_height="match_parent"
        android:background="@color/mainPanelBG">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="165px"
            android:src="@drawable/logo_main_info_all"
            android:id="@+id/main_btn_facility" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginTop="165px"
            android:background="@android:color/white" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="138px"
            android:layout_marginTop="168px"
            android:src="@drawable/logo_main_info_floor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginTop="303px"
            android:background="@android:color/white" />

        <LinearLayout
            android:id="@+id/floor_button_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="662.7px"
            android:layout_marginTop="306px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="3F"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_main_floor_normal"
                    android:id="@+id/main_btn_floor_3"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="2F"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_main_floor_normal"
                    android:id="@+id/main_btn_floor_2"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="1F"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_main_floor_normal"
                    android:id="@+id/main_btn_floor_1"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="B1F"

                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_main_floor_normal"
                    android:id="@+id/main_btn_floor_b1"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="B2F"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_main_floor_normal"
                    android:id="@+id/main_btn_floor_b2"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="B3F"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_main_floor_normal"
                    android:id="@+id/main_btn_floor_b3"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="B4F"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_main_floor_normal"
                    android:id="@+id/main_btn_floor_b4"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="B5F"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_main_floor_normal"
                    android:id="@+id/main_btn_floor_b5"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="B6F"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_main_floor_normal"
                    android:id="@+id/main_btn_floor_b6"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="12F"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_main_floor_normal"
                    android:id="@+id/main_btn_floor_12"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
